<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="src.main.controladores.MenuDepartamentosController"
      alignment="CENTER"
      spacing="8">

    <Label text="Menú de Administración de Departamentos">
        <font>
            <Font size="24"/>
        </font>
    </Label>

    <HBox spacing="10" alignment="BASELINE_CENTER">
        <Label text="Nombre Edificio:  " style="-fx-font-weight: bold;" />
        <TextField fx:id="nombreEdTextField" />
    </HBox>

    <Button text="Agregar Departamento" onAction="#agregarDepartamento" />
    <Button text="Buscar Departamento" onAction="#buscarDepartamento" />
    <Button text="Eliminar Departamento" onAction="#eliminarDepartamento" />
    <Button text="Mostrar Departamentos" onAction="#mostrarDepartamentos" />
    <Button text="Editar Departamento" onAction="#editarDepartamento" />
    <Button text="Volver al Menú Principal" onAction="#volver" />
</VBox>
