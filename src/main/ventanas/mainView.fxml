<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="src.main.controladores.MenuController">
    <ImageView fx:id="logoImageView" fitWidth="334" fitHeight="334">
        <Image url="/src/main/resources/img/gestion2.png"/> <!-- Ajusta la ruta según donde tengas guardada tu imagen -->
    </ImageView>

    <Label text="¡Bienvenido al Programa de Gestión Inmobiliaria!">
        <font>
            <Font size="24"/>
        </font>
    </Label>

    <Button text="Ingresar al sistema de gestión inmobiliaria" fx:id="btnIngresar" onAction="#ingresarAlSistema" />
    <Button text="Salir" fx:id="btnSalir" onAction="#salir" />
</VBox>