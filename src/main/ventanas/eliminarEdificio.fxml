<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="src.main.controladores.EliminarEdificioController"
      alignment="CENTER"
      spacing="10">

    <Label text="Eliminar Edificio" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="BASELINE_CENTER">
        <Label text="Nombre del Edificio:" style="-fx-font-weight: bold;" />
        <TextField fx:id="nombreEdificioTextField" />
    </HBox>

    <Button fx:id="eliminarButton" text="Eliminar" onAction="#eliminarEdificio" style="-fx-font-size: 16px;"/>

</VBox>
